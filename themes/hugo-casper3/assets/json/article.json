{
  "@context": "https://schema.org",
  "@type": "TechArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": {{ .Permalink | jsonify }}
  },
  "headline": {{ .Title | jsonify }},
  "alternativeHeadline": {{ .Params.subtitle | default "" | jsonify }},
  "description": {{ .Params.summary | jsonify }},
  "author": {
    "@type": "Person",
    "name": "Bradley Stannard",
    "url": "https://breadnet.co.uk/author/bradley/",
    "image": {
      "@type": "ImageObject",
      "url": "https://breadnet.co.uk/content/images/2023/03/bradley.jpg",
      "width": 2000,
      "height": 2667
    },
    "sameAs": [
      "https://github.com/userbradley"
    ]
  },
  "publisher": {
    "@type": "Organization",
    "name": {{ .Site.Title | jsonify }},
    "url": {{ absURL "" | jsonify }},
    "logo": {
      "@type": "ImageObject",
      "url": {{ absURL "favicon.png" | jsonify }},
      "width": 60,
      "height": 60
    }
  },
  "datePublished": {{ .PublishDate | jsonify }},
  "dateModified": {{ .Lastmod | jsonify }},
  "image": {
    "@type": "ImageObject",
    "url": {{ with .Resources.GetMatch (.Params.feature_image) }}{{ .Permalink | jsonify }}{{ else }}{{ absURL "cover.jpg" | jsonify }}{{ end }},
    "width": 2000,
    "height": 1500
  },
  "inLanguage": "en-GB",
  "articleSection": {{ .Params.category | default "Blog" | jsonify }},
  "keywords": {{ .Params.tags | jsonify }},
  "articleBody": {{ .Plain | jsonify }},
  "wordCount": {{ .WordCount | jsonify}},
  "timeRequired": {{printf "PT%sM" (.ReadingTime | string) | jsonify }}
}
